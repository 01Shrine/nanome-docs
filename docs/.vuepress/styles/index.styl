.icon.outbound
  display none !important

.theme-container .page .theme-default-content
  max-width 900px

.home-video
  position relative
  width 100%
  height 0
  padding-bottom 56.25%

  iframe, video
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    object-fit cover

.btn
  display inline-block
  padding 0.5em 1em
  background #29a1ff
  color #fff
  border-radius 4px
  font-weight bold
  transition background 300ms ease
  text-decoration none !important

  &:hover
    background #0690ff
  
  &:disabled
    opacity: 0.5;
    cursor: not-allowed;


.text-center
  text-align center